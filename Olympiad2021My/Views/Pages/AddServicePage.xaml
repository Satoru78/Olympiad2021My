<Page x:Class="Olympiad2021My.Views.Pages.AddServicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Olympiad2021My.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddServicePage">

    <Grid>
        <StackPanel Orientation="Vertical" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Название :"></TextBlock>
            <TextBox Text="{Binding Service.Title}"></TextBox>

            <TextBlock Text="Цена :"></TextBlock>
            <TextBox Text="{Binding Service.Cost}"></TextBox>

            <TextBlock Text="Время в секундах:"></TextBlock>
            <TextBox Text="{Binding Service.DurationInSeconds}"></TextBox>
            
            <TextBlock Text="Описание:"></TextBlock>
            <TextBox Text="{Binding Service.Description}"></TextBox>
            
            <TextBlock Text="Скидка:"></TextBlock>
            <TextBox Text="{Binding Service.Discount}"></TextBox>

            <Button Content="Оформить услугу" Name="SaveBtn" Click="SaveBtn_Click"  Margin="0,10,0,0"></Button>
        </StackPanel>
    </Grid>
</Page>
